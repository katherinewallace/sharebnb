<form class="search" action="<%= listings_url %>" method="GET">
  <label for="search_city">City</label>
  <select name="search[city]" id="search_city">
    <option value="New York" <%= @search["city"] == "New York" ? "selected": ""%>>New York</option>
    <option value="Philadelphia" <%= @search["city"] == "Philadelphia" ? "selected": ""%>>Philadelphia</option>     
  </select>
  
  <label for="search_start_date">Check in</label>
  <input type="text" name="search[start_date]" value="<%= @search["start_date"] %>" id="search_start_date" class="start_date">
  
  <label for="search_end_date">Check out</label>
  <input type="text" name="search[end_date]" value="<%= @search['end_date'] %>" id="datepicker" class="end_date date-picker">
  
  <label for="search_guests">Guests</label>
  <input type="number" name="search[guest_num]" value="<%= @search["guest_num"] ? @search["guest_num"] : 1 %>" id="search_guests" min=1 max=20>
  <label></label>
    <input type="submit" value="Search" class="btn">
</form>

