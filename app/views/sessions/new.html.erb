<%= render "shared/errors" %>
<h1>Sign in</h1>
<section>
<form action="<%= session_url %>" method="POST" class="user-form">
  <%= auth_token %>
  
  <label for="email">Email</label>
  <input type="text" name="user[email]" value="<%= @user.email %>" id="user_email">
  <br>
  
  <label for="user_password">Password</label>
  <input type="password" name="user[password]" value="" id="user_password">
  <br>
  
  <input type="submit" value="Sign in" id="sign-in-btn">
  
</form>
</section>

<section>
  <form action="<%= session_url %>" method="POST">
    <%= auth_token %>
    <input type="hidden" name="user[email]" value="demo@example.com">
    <input type="hidden" name="user[password]" value="password">
    <input type="submit" value="Sign in with Sample Acccount">
  </form>
  <p>Don't have an account yet?</p>
  <a href="<%= new_user_url %>">Sign up</a>
</section>