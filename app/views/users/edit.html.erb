<%= flash[:success] %>
<%= render "shared/errors" %>

  <form enctype="multipart/form-data" action="<%= user_url(@user) %>" method="POST">
    <div class="photo">
      <%= image_tag @user.profile_pic.try(:url, :medium) %>
    <input type="hidden" name="_method" value="PUT">

    <input type="file" name="user[profile_pic]" value="">
    </div>
    <label for="user_description">Describe yourself</label>
    <br>
    <textarea name="user[description]" rows="5" cols="30" id="user_description"><%= @user.description %></textarea>
    <br>
    
    <%= render "form" %>
    
    <label for="gender">gender</label>
    <select name="user[gender]" id="gender">
      <option value="">--</option>
      <option value="male" <%= "selected" if @user.gender == "male" %>>male</option>
      <option value="female" <%= "selected" if @user.gender == "female" %>>female</option>
      <option value="other" <%= "selected" if @user.gender == "other" %>>other</option>
    </select>
    <br>
    
    <label for="user_birthday">Birthday</label>
    <input type="date" name="user[bday]" value="<%= @user.bday %>" id="user_birthday">
    <br>
    
    <label for="user_phone_number">Phone number</label>
    <input type="text" name="user[phone]" value="<%= @user.phone %>" id="user_phone_number">
    <br>
    
    <input type="submit" value="Update" id="edit-user-btn">
    
  </form>
